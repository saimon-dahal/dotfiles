
#!/bin/bash

# Check argument
if [ $# -ne 1 ]; then
    echo "Usage: $0 image.png"
    exit 1
fi

input="$1"

# Check file extension
if [[ "${input##*.}" != "png" ]]; then
    echo "Error: Input file must be a PNG."
    exit 1
fi

# Output file name
output="${input%.png}.jpg"

# Convert
convert "$input" "$output"

echo "Converted $input -> $output"
