
#!/bin/bash

# Check argument
if [ $# -ne 1 ]; then
    echo "Usage: $0 image.jpg"
    exit 1
fi

input="$1"

# Check file extension
if [[ "${input##*.}" != "jpg" && "${input##*.}" != "jpeg" ]]; then
    echo "Error: Input file must be a JPG."
    exit 1
fi

# Output file name
output="${input%.*}.png"

# Convert
convert "$input" "$output"

echo "Converted $input -> $output"
